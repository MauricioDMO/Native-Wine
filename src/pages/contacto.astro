---
import Background from "../components/Background.astro";
import Mail from "../components/Mail.astro";
import Title from "../components/Title.astro";
import WhatsApp from "../components/WhatsApp.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contacto"
  description="Contacta con nosotros para cualquier duda o sugerencia"
>
  <Background src="/patron-rectangulo.svg" />
  <section class="grid place-items-center h-full">
    <div>
      <Title>Contacto</Title>
      <div class="max-w-[80ch] m-auto p-4">
        <p class="py-6 text-justify">
          Estimados clientes, <br />
          <br />Pueden contactarnos por los siguientes medios para obtener más
          información:
        </p>
        <div class="flex justify-evenly">
          <a
            class="flex items-center bg-complement-0 rounded-md text-white px-6 py-1 hover:bg-complement-1 hover:scale-105 transition"
            href="whatsapp://send?text=Hola Buenas&phone=+50374433939"
            ><WhatsApp color="#fff" class="mr-4" />
             WhatsApp
          </a>
          <a
            class="flex items-center bg-complement-0 rounded-md text-white px-6 py-1 hover:bg-complement-1 hover:scale-105 transition"
            href="mailto:nativewine.contacto@gmail.com?Subject=Contacto desde la web"
          >
            <Mail color="#fff" class="mr-4" />
             Email
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
